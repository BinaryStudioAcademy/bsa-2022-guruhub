{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
