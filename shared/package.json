{
  "name": "shared",
  "private": "true",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "scripts": {
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint:type": "npx tsc --noEmit",
    "lint": "npm run lint:js && npm run lint:type",
    "build:ts": "tsc && tsc-alias -p tsconfig.json",
    "build": "npm run build:ts && cp package.json package-lock.json build"
  },
  "devDependencies": {
    "tsc-alias": "1.6.11"
  },
  "dependencies": {
    "joi": "17.6.0"
  }
}
